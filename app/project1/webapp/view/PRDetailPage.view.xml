<mvc:View
   controllerName="project1.controller.PRDetailPage"

    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <VBox width="100%" height="100%">
        
        <!-- Left Table -->
        <VBox width="100%" class="sapUiSmallMargin">
            <Title text="Left Table (Details)" level="H2" />
            <Table id="idLeftTable" items="{/LeftData}">
                <columns>
                    <Column>
                        <Text text="Field 1" />
                    </Column>
                    <Column>
                        <Text text="Field 2" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{Field1}" />
                            <Text text="{Field2}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>

        <!-- Right Table -->
        <VBox width="100%" class="sapUiSmallMargin">
            <Title text="Right Table (More Details)" level="H2" />
            <Table id="idRightTable" items="{/RightData}">
                <columns>
                    <Column>
                        <Text text="Field A" />
                    </Column>
                    <Column>
                        <Text text="Field B" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{FieldA}" />
                            <Text text="{FieldB}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>

    </VBox>
</mvc:View>
